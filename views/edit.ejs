<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Note</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom styles -->
  <style>
    .editor-container {
      height: 80vh;
      overflow-y: auto;
    }
    .preview-container {
      height: 80vh;
      overflow-y: auto;
      background-color: #f8f9fa;
      border: 1px solid #ddd;
      padding: 1rem;
    }
    @media (max-width: 767.98px) {
      .editor-container,
      .preview-container {
        height: auto;
      }
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <h1 class="mb-4">Edit Note</h1>
    <form action="/edit/<%= post.id %>" method="POST">
      <div class="row">
        <!-- Text Input (Editor) Section -->
        <div class="col-md-6 editor-container">
          <div class="mb-3">
            <textarea id="noteContent" name="content" class="form-control" rows="20"></textarea>
          </div>
        </div>
        <!-- Preview Section -->
        <div class="col-md-6 preview-container">
          <h4>Preview</h4>
          <div id="preview">
            
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/2.1.0/showdown.min.js"></script>

  <script>
    console.log('Editor script loaded');
    const textarea = document.getElementById('noteContent');
    const preview = document.getElementById('preview');
    
    var converter = new showdown.Converter();

    function updatePreview() {
      preview.innerHTML = converter.makeHtml(textarea.value);
    }
    
    textarea.addEventListener('input', updatePreview);
    
    // Initialize preview on page load
    window.onload = function() {
      updatePreview();
    };
    
    textarea.value = '<%= content %>';
    console.log('Textarea value:', textarea.value);
  </script>
</body>
</html>